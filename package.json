{
  "name": "@dhopegraphics/proximity-sensor",
  "version": "1.0.1",
  "description": "React Native & Expo package for accessing the device's proximity sensor with cross-platform support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "android/**/*",
    "ios/**/*",
    "plugin/**/*",
    "!**/__tests__/**",
    "!**/example/**"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc",
    "prepublishOnly": "npm run build",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "test": "jest",
    "example": "cd example && npm start"
  },
  "keywords": [
    "react-native",
    "expo",
    "proximity",
    "sensor",
    "dhopegraphics",
    "ios",
    "android"
  ],
  "author": "DhopeGraphics",
  "license": "MIT",
  "peerDependencies": {
    "expo": ">=49.0.0",
    "react": "*",
    "react-native": "*"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/plugin-transform-class-properties": "^7.18.6",
    "@babel/plugin-transform-private-methods": "^7.18.6",
    "@babel/plugin-transform-private-property-in-object": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@types/react": "^18.2.0",
    "@types/react-native": "^0.72.0",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.0.0",
    "expo": "^52.0.46",
    "jest": "^29.3.1",
    "metro-react-native-babel-preset": "^0.76.7",
    "prettier": "^2.8.3",
    "react": "18.2.0",
    "react-native": "^0.72.17",
    "typescript": "^4.9.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dhopegraphics/-dhopegraphics-proximity-sensor.git"
  },
  "bugs": {
    "url": "https://github.com/dhopegraphics/-dhopegraphics-proximity-sensor/issues"
  },
  "homepage": "https://github.com/dhopegraphics/-dhopegraphics-proximity-sensor#readme"
}
