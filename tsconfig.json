{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "jsx": "react-native",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "example",
    "**/__tests__",
    "**/__mocks__"
  ]
}